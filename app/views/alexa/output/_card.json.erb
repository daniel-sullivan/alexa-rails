<% content = render(
      template: response.partial_path(format: :text),
      locals: { response: response }
    ) %>
{
  "type": "<%= (content_for(:card_type) || "Simple").strip %>",
  "title":  "<%= (content_for(:card_title) || "Card Title").strip %>",
  "content": <%= raw content.strip.to_json %>
}
